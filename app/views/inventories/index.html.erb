<main>
  <ul class="inventories w-[70%] mx-auto divide-y divide-gray-300">
    <% @inventory_list.each do |invent_item| %>
      <%= render partial: 'shared/inventory_or_recipe_item',
        locals: { data: invent_item }
      %>
    <% end %>
  </ul>

  <a href="<%= new_inventory_path %>" title="New Inventory"
    class="fixed right-3 bottom-[10%] inline-flex items-center justify-center w-10 h-10 mr-2 text-indigo-100 transition-colors duration-150 bg-indigo-700 rounded-full focus:shadow-outline hover:bg-indigo-800">
    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20"><path d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" fill-rule="evenodd"></path></svg>
  </a>
</main>