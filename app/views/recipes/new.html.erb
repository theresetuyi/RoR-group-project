<h2>Sign up</h2>

<%= form_with model: @food, url: '/add_food/:id', method: :post do |form| %>
  <div class="field">
    <%= form.label :name %><br />
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :measurement_unit %><br />
    <%= form.number_field :measurement_unit %>
  </div>

  <div class="field">
    <%= form.label :price %><br />
    <%= form.number_field :price %>
  </div>

  <div class="add_food">
    <%= form.submit "Add Food" %>
  </div>
<% end %>
