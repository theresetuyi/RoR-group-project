<div class="page_container">
  <% @recipes.each do |recipe| %>
    <div class="a_recipe">
      <div class="first_section">
        <a href="<%= recipe_path(recipe) %>" class="recipe_details_link">
          <h3><%= recipe.name %></h3>
        </a>
        <%= link_to 'REMOVE', recipe_path(recipe), method: :delete, data: 
        { confirm: 'Are you sure you want to delete this recipe?' }, class: 'btn btn-danger', remote: true %>
      </div>
      
      <!-- Display the recipe's description here -->
      <div class="second_section">
        <p><%= recipe.description %></p>
      </div>
    </div>
  <% end %>
</div>
